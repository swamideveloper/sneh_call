<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mz_bottomsheet_topround"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/close_null"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/close_di_btn"
            android:layout_toRightOf="@+id/close_null"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Select Payment Option"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/close_di_btn"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/mz_ic_close_payment" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/radhe_phonepay"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/phonepay_log"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/mz_btnphonepay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_toLeftOf="@+id/pay4"
            android:layout_toRightOf="@+id/phonepay_log"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phonepay_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical|center_horizontal|center"
                    android:maxLines="1"
                    android:text="Phone Pay"
                    android:textColor="#1c3950"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical|center_horizontal|center"
                    android:maxLines="1"
                    android:text="(Popular)"
                    android:textColor="#004a97"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phonepay_name"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="70% Cashback After 24 Hrs"
                android:textColor="#004a97"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/pay4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="PAY"
            android:textColor="#ff0057"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/paytm"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/paytm_log"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/mz_paytm" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/pay2"
            android:layout_toRightOf="@+id/paytm_log">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:ellipsize="end"
                android:gravity="left|center_vertical|center_horizontal|center"
                android:maxLines="1"
                android:text="Paytm"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:textColor="#d0ffffff"
                android:textSize="10dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/pay2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="PAY"
            android:textColor="#ff0057"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/radhe_g_pay"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/gpay_log"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/mz_gpay" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_toLeftOf="@+id/pay3"
            android:layout_toRightOf="@+id/gpay_log"
            android:ellipsize="end"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:maxLines="1"
            android:text="@string/google_pay"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pay3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="PAY"
            android:textColor="#ff0057"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/radhe_other_app"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/bhim_log"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/mz_bhim" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_toStartOf="@+id/pay1"
            android:layout_toEndOf="@+id/bhim_log"
            android:ellipsize="end"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:maxLines="1"
            android:text="Bhim UPI"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pay1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="PAY"
            android:textColor="#ff0057"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
